<UserControl x:Class="LogcatToolWin.LogcatOutputToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="{DynamicResource VsBrush.Window}"
             Foreground="{DynamicResource VsBrush.WindowText}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="MyToolWindow">
    <Grid>
        <StackPanel Orientation="Vertical">
            <ToolBar Height="36" VerticalContentAlignment="Bottom">
                <Button x:Name="ConnectDeviceButton" Content="" Height="30" VerticalAlignment="Center" Width="30" ToolTip="Connect Device">
                    <Button.Background>
                        <ImageBrush ImageSource="Resources/MobileDeviceIcon.png" Stretch="None"/>
                    </Button.Background>
                </Button>
                <Label x:Name="DeviceStateLabel" Content="Online" Height="31" VerticalAlignment="Top"/>
            </ToolBar>
            <Button Content="Click me!" Click="button1_Click" Width="120" Height="39" x:Name="button1" Margin="90,0"/>
            <TextBlock x:Name="OutputLogTextBlock" TextWrapping="Wrap" Text="TextBlock"/>
        </StackPanel>
    </Grid>
</UserControl>
